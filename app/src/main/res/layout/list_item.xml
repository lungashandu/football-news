<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/topic_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        tools:text="Abramovich hands ‘stewardship and care of Chelsea’ to charitable foundation"/>

    <TextView
        android:id="@+id/category_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/topic_textView"
        tools:text="Live Football"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"/>

    <TextView
        android:id="@+id/date_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/topic_textView"
        android:layout_alignParentEnd="true"
        tools:text="2022/02/27"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topic_textView"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/date_TextView"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        tools:text="Date Published: " />

</RelativeLayout>